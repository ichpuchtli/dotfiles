# - Conky settings - #

update_interval 3.0
total_run_times 0
net_avg_samples 1
cpu_avg_samples 1
imlib_cache_size 0
double_buffer yes
no_buffers yes 
# - Text settings - #

use_xft yes
xftfont Sans:size=8
xftalpha 1
override_utf8_locale yes
text_buffer_size 2048

# - Window specifications - #

own_window_class Conky
own_window yes
own_window_type normal
own_window_argb_visual yes
own_window_argb_value 180
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

minimum_size 200 200
maximum_width 200
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
default_color white
default_shade_color blue
default_outline_color white
alignment top_right
gap_x 10
gap_y 20
no_buffers yes
uppercase no

TEXT
${font Santana:bold:size=8}SYSTEM ${hr 2}
${color0}${voffset 6}${font OpenLogos:size=19}${font Santana:normal:size=8}${voffset -14}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime
File System: $alignr${fs_type}
${goto 58}${voffset 7}${font URW Gothic L:size=40}${time %k}${voffset -5}${goto 115}:${voffset 5}${goto 130}${time %M}${voffset -10}${goto 185}${voffset 10}${goto 202}${font}
#${font Santana:bold:size=8}${execi 1000 cat /proc/cpuinfo | grep 'model name' | sed -e 's/model name.*: //'| uniq}${hr 2}
#${font Santana:bold:size=8}Intel Core2-Q9000 @ 2.00 Ghz
#${execi 300 sensors | grep temp1 | cut --characters=15,16,17}Â°C
#${font Santana:normal:size=8}${cpugraph cpu0}
#Core 1: ${cpu cpu0}% ${cpubar cpu0}
#${font Santana:normal:size=8}${cpugraph cpu1}
#Core 2: ${cpu cpu1}% ${cpubar cpu1}
#${font Santana:normal:size=8}${cpugraph cpu2}
#Core 3: ${cpu cpu2}% ${cpubar cpu2}
#${font Santana:normal:size=8}${cpugraph cpu3}
#Core 4: ${cpu cpu3}% ${cpubar cpu3}

${font Santana:bold:size=8}MEMORY ${hr 2}
${font Santana:normal:size=8}RAM $alignc $mem / $memmax $alignr $memperc%
$membar
${top_mem name 1}${alignr}${top mem 1} %

${font Santana:bold:size=8}HDD ${hr 2}
${font Santana:normal:size=8}/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar /}
${font Santana:normal:size=8}/home $alignc ${fs_used /home} / ${fs_size /home} $alignr ${fs_used_perc /home}%
${fs_bar /home}
${font Santana:normal:size=8}/~/Storage $alignc ${fs_used /media/Storage} / ${fs_size /media/Storage} $alignr ${fs_used_perc /media/Storage}%
${fs_bar /media/Storage}

${font Poky:size=15}${voffset -12}${font Santana:bold:size=8}PROCESSES ${hr 2}
${top name 1} ${alignr}${top cpu 1}

${font VariShapes Solid:size=14}${voffset -1}${font VariShapes Solid:size=14}${voffset -7}${font Santana:bold:size=8} NETWORK ${hr 2}${voffset 7}
${font Santana:normal:size=8}${voffset 5}ESSID: $alignr ${wireless_essid wlan0}
Connection quality: $alignr ${wireless_link_qual_perc wlan0}%
${downspeedgraph wlan0}
Down:${downspeed wlan0} $alignr Total: ${totaldown wlan0}
${upspeedgraph wlan0}
Up:${upspeed wlan0} $alignr Total: ${totalup wlan0}

${font Santana:bold:size=8}Internet ${hr 2}
${font Santana:normal:size=8}Gateway address: ${alignr}${gw_ip}
${font Santana:normal:size=8}Local address: $alignr${addr wlan0}
${font Santana:normal:size=8}Public address: ${alignr}${color2}${execi 1000 wget http://checkip.dyndns.org/ -q -O - | grep -Eo '\<[[:digit:]]{1,3}(\.[[:digit:]]{1,3}){3}\>'}



