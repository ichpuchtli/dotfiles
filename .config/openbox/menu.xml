<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="OpenBox 3">
		<menu execute="~/.config/openbox/pipemenus/obpipemenu-places ~/" id="places" label="Places"/>
		<!-- <menu execute="cat ~/.cache/applications.xml" id="desktop-menu" label="Apps"/> -->
		<separator/>
		<item label="Terminal">
			<action name="Execute">
				<execute>lxterminal</execute>
			</action>
		</item>
		<item label="Chromium">
			<action name="Execute">
				<execute>chromium</execute>
			</action>
		</item>
		<item label="Htop">
			<action name="Execute">
				<execute>lxterminal --geometry=120x35 -e htop</execute>
			</action>
		</item>
		<item label="ncmpcpp">
			<action name="Execute">
				<execute>lxterminal --geometry=120x35 -e ~/.ncmpcpp/start.sh</execute>
			</action>
		</item>
		<item label="rtorrent">
			<action name="Execute">
				<execute>lxterminal --geometry=105x30 -e  rtorrent</execute>
			</action>
		</item>
		<separator/>
		<menu id="36" label="Settings">
			<menu id="37" label="OpenBox">
				<item label="Key Editor">
					<action name="Execute">
						<execute> obkey </execute>
					</action>
				</item>
				<item label="Configuration Manager">
					<action name="Execute">
						<execute>obconf</execute>
					</action>
				</item>
				<item label="Menu Editor">
					<action name="Execute">
						<execute> obmenu </execute>
					</action>
				</item>
			</menu>
			<menu id="root-menu-891528" label="Eye Candy">
				<item label="No effects">
					<action name="Execute">
						<execute> ~/.config/openbox/scripts/xcompmgr.sh unset </execute>
					</action>
				</item>
				<item label="Transparency">
					<action name="Execute">
						<execute> ~/.config/openbox/scripts/xcompmgr.sh set </execute>
					</action>
				</item>
				<item label="Transparency, fading">
					<action name="Execute">
						<execute> ~/.config/openbox/scripts/xcompmgr.sh setshaded </execute>
					</action>
				</item>
				<item label="Transparency, fading shadows">
					<action name="Execute">
						<execute> ~/.config/openbox/scripts/xcompmgr.sh setshadowshade </execute>
					</action>
				</item>
			</menu>
			<item label="Customize Look and Feel">
				<action name="Execute">
					<execute>lxappearance</execute>
				</action>
			</item>
			<item label="Keyboard and Mouse">
				<action name="Execute">
					<execute>lxinput</execute>
				</action>
			</item>
			<item label="Screen Resolution">
				<action name="Execute">
					<execute>arandr</execute>
				</action>
			</item>
			<item label="Wallpaper">
				<action name="Execute">
					<execute> nitrogen </execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-42239" label="Kill">
			<item label="Kill ncmpcpp &amp; mpd">
				<action name="Execute">
					<execute>lxterminal -e ~/.ncmpcpp/stop.sh</execute>
				</action>
			</item>
			<item label="Killall rtorrent">
				<action name="Execute">
					<execute>killall rtorrent</execute>
				</action>
			</item>
			<item label="Kill tmux">
				<action name="Execute">
					<execute>tmux kill-server</execute>
				</action>
			</item>
			<item label="killall chromium">
				<action name="Execute">
					<execute>killall chromium</execute>
				</action>
			</item>
			<item label="Restart Conky">
				<action name="Execute">
					<execute> conkywonky </execute>
				</action>
			</item>
			<separator/>
			<item label="Logout">
				<action name="Execute">
					<execute>openbox --exit</execute>
				</action>
			</item>
			<item label="Reboot">
				<action name="Execute">
					<execute>sudo systemctl reboot</execute>
				</action>
			</item>
			<item label="Shutdown">
				<action name="Execute">
					<execute>sudo systemctl poweroff</execute>
				</action>
			</item>
		</menu>
	</menu>
</openbox_menu>
